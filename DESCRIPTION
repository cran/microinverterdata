Package: microinverterdata
Type: Package
Title: Collect your Microinverter Data
Version: 0.2.0
Authors@R: c(
    person(given = "Christophe",
           family = "Regouby",
           role = c("aut", "cre", "cph"),
           email = "christophe.regouby@free.fr"
